{
    "compilerOptions": {
        "target": "es2020",
        "module": "nodenext",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "types": [
            "vite/client"
        ],
        "baseUrl": "./packages/raakkan/yali/resources/js",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "./packages/raakkan/yali/resources/**/*.ts",
        "./packages/raakkan/yali/resources/**/*.d.ts",
        "./packages/raakkan/yali/resources/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}