{
    "name": "raakkan/yali",
    "description": "Another laravel admin panel",
    "type": "stable",
    "license": "mit",
    "autoload": {
        "psr-4": {
            "Raakkan\\Yali\\": "src/",
            "Raakkan\\Yali\\Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "src/helpers/plugin-helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Raakkan\\Yali\\Database\\Factories\\": "database/factories/",
            "Raakkan\\Yali\\Database\\Seeders\\": "database/seeders/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "raakkan",
            "email": "solakkathir@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "livewire/livewire": "^3.4",
        "wikimedia/composer-merge-plugin": "^2.1",
        "illuminate/support": "^11.7",
        "illuminate/console": "^11.7"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Raakkan\\Yali\\Providers\\YaliServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "orchestra/testbench": "^9.1"
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ]
    }
}